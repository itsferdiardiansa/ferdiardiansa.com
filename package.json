{
  "name": "oxcyn",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "preinstall": "npx only-allow pnpm",
    "prepare": "husky install",
    "reset": "npx nx reset",
    "type-check": "pnpm nx run-many -t type-check",
    "format": "prettier --check \"{apps,packages}/**/*.ts\" --config .prettierrc",
    "format:write": "prettier --write \"{apps,packages}/**/*.ts\" --config .prettierrc",
    "lint": "pnpm nx run-many -t lint",
    "lint:fix": "pnpm nx run-many -t lint:fix",
    "test": "pnpm nx run-many -t test",
    "test:coverage": "pnpm nx run-many -t test:coverage",
    "generate-coverage": "node ./scripts/generate-coverage.js",
    "generate-sonar-properties": "./scripts/generate-sonar-properties.sh"
  },
  "private": true,
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@jest/globals": "^29.7.0",
    "@nx/js": "18.2.4",
    "@vercel/analytics": "^1.3.1",
    "@vercel/node": "^3.1.7",
    "@vercel/remote-nx": "^2.0.0",
    "@vercel/speed-insights": "^1.0.12",
    "chalk": "^4.1.2",
    "husky": "^9.0.11",
    "jest": "^29.7.0",
    "lint-staged": "^15.2.7",
    "nodemon": "^3.1.3",
    "nx": "18.2.4",
    "nyc": "^15.1.0",
    "prettier": "^3.3.2"
  },
  "lint-staged": {
    "**/*.{js,ts,tsx}": [
      "pnpm run format:write",
      "pnpm run lint:fix",
      "pnpm run test"
    ],
    "**/*": "prettier --write --ignore-unknown"
  },
  "dependencies": {
    "vercel": "^34.2.7"
  }
}
